{% extends 'base.html.twig' %}

{% block title %}
Connexion
{% endblock %}

{% block body %}
    <form action="{{ path('login') }}" method="post">
        {% if error %}
            <div class="alert alert-danger alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong>Erreur !</strong> Les identifiants sont incorrects.
            </div>
        {% endif %}
        <div class="form-group">
            <label for="username">Nom d'utilisateur</label>
            <input type="text" class="form-control" id="username" name="_username" placeholder="Nom d'utilisateur">
        </div>
        <div class="form-group">
            <label for="password">Mot de passe</label>
            <input type="password" class="form-control" id="password" name="_password" placeholder="Mot de passe">
        </div>
        <button type="submit" class="btn btn-primary">Connexion</button>
    </form>
{% endblock %}

{% block stylesheets %}
    <style>
        .box a
        {
            font-weight: bold;
            text-decoration: none;
            color: #C9C9C9;
            margin-right: 4%;
            padding: 5px;
            cursor: pointer;
            border-bottom: 1px solid;
        }
        .box a:hover
        {
            font-weight: bolder;
            border-bottom: 2px solid;
        }
    </style>
{% endblock %}

