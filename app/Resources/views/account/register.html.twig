{% extends 'base.html.twig' %}

{% block title %}
    Inscription
{% endblock %}

{% block body %}
    <form action="{{ path('register') }}" method="post" data-toggle="validator" role="form">
        {% if errors %}
            <div class="alert alert-danger alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong>Erreur !</strong>
                <ul>
                    {% for error in errors %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}
        <div class="form-group">
            <label for="username">Nom d'utilisateur</label>
            <input type="text" class="form-control" id="username" name="username" placeholder="Nom d'utilisateur" maxlength="10" required>
            <div class="small text-muted">10 caractères max</div>
            <div class="help-block with-errors small"></div>
        </div>
        <div class="form-group">
            <label for="password">Mot de passe</label>
            <div class="form-inline row">
                <div class="form-group col-sm-6">
                    <input type="password" class="form-control" id="password" name="password" placeholder="Mot de passe" maxlength="80" required>
                    <div class="help-block with-errors small"></div>
                </div>
                <div class="form-group col-sm-6">
                    <input type="password" class="form-control" id="password-conf" name="password-conf" placeholder="Confirmation" required data-match="#password">
                    <div class="help-block with-errors small"></div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="email">Adresse mail</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="Adresse mail" required>
            <div class="small text-muted">Votre adresse mail est confidentielle et ne sera pas distribuée à des tiers.</div>
            <div class="help-block with-errors small"></div>
        </div>
        <div class="form-group">
            <div class="form-inline row">
                <div class="form-group col-sm-6">
                    <label for="firstname">Prénom</label>
                    <input type="text" class="form-control" id="firstname" name="firstname" placeholder="Prénom" maxlength="40" required>
                    <div class="help-block with-errors small"></div>
                </div>
                <div class="form-group col-sm-6">
                    <label for="lastname">Nom</label>
                    <input type="text" class="form-control" id="lastname" name="lastname" placeholder="Nom" maxlength="50" required>
                    <div class="help-block with-errors small"></div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="country">Pays</label>
            <select class="form-control" id="country" name="country" required>
                {% for country in countries %}
                    <option value="{{ country.getCodePays() }}" {{ (country.getNomPays() == 'France') ? 'selected' }}>{{ country.getNomPays()|e }}</option>
                {% endfor %}
            </select>
            <div class="help-block with-errors small"></div>
        </div>
        <div class="form-group">
            <label for="address">Adresse</label>
            <input type="text" class="form-control" id="address" name="address" placeholder="Adresse" maxlength="50" required>
            <div class="help-block with-errors small"></div>
            <div class="form-inline row">
                <div class="form-group col-sm-3">
                    <input type="text" pattern="^[0-9]{5}$" title="Code Postal" class="form-control" id="postalcode" name="postalcode" placeholder="Code Postal" required>
                    <div class="help-block with-errors small"></div>
                </div>
                <div class="form-group col-sm-9">
                    <input type="text" class="form-control" id="city" name="city" placeholder="Ville" maxlength="50" required>
                    <div class="help-block with-errors small"></div>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Inscription</button>
    </form>
{% endblock %}

{% block stylesheets %}
    <style>
        .box a
        {
            font-weight: bold;
            text-decoration: none;
            color: #C9C9C9;
            margin-right: 4%;
            padding: 5px;
            cursor: pointer;
            border-bottom: 1px solid;
        }
        .box a:hover
        {
            font-weight: bolder;
            border-bottom: 2px solid;
        }
    </style>
{% endblock %}

