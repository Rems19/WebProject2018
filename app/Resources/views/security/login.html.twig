{% extends 'base.html.twig' %}

{% block title %}
Connexion
{% endblock %}

{% block body %}
    <div class="page-header">
        <h1>Connexion | <small>Connectez-vous Ã  votre compte Alib'Album</small></h1>
    </div>
    <form action="{{ path('login') }}" method="post">
        {% if error %}
            <div class="alert alert-danger alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong>Erreur !</strong> Les identifiants sont incorrects.
            </div>
        {% endif %}
        <div class="form-group">
            <label for="username">Nom d'utilisateur</label>
            <input type="text" class="form-control" id="username" name="_username" placeholder="Nom d'utilisateur">
        </div>
        <div class="form-group">
            <label for="password">Mot de passe</label>
            <input type="password" class="form-control" id="password" name="_password" placeholder="Mot de passe">
        </div>
        <button type="submit" class="btn btn-primary">Connexion</button>
    </form>
{% endblock %}

{% block stylesheets %}
<style>
    form {
        max-width: 50%;
        margin: 0 auto;
    }
</style>
{% endblock %}

