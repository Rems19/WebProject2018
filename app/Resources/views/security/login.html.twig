{% extends 'base.html.twig' %}

{% block title %}
Connexion
{% endblock %}

{% block body %}
    <h1 class="text-center title">Connexion | <small>Connectez-vous Ã  votre compte Alib'Album</small></h1>
    <hr class="center">
    <div class="content">
        <div class="box">
            <h2>Connexion</h2>
            <hr class="left">
            <form action="{{ path('login') }}" method="post">
                {% if error %}
                    <div class="alert alert-danger alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <strong>Erreur !</strong> Les identifiants sont incorrects.
                    </div>
                {% endif %}
                <div class="form-group">
                    <label for="username">Nom d'utilisateur</label>
                    <input type="text" class="form-control" id="username" name="_username" placeholder="Nom d'utilisateur">
                </div>
                <div class="form-group">
                    <label for="password">Mot de passe</label>
                    <input type="password" class="form-control" id="password" name="_password" placeholder="Mot de passe">
                </div>
                <button type="submit" class="btn btn-primary">Connexion</button>
            </form>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <style>
        form {
            width: 100%;
            margin: 0 auto;
        }
        input.form-control, select.form-control {
            min-width: 100%;
            max-width: 100%;
            background-color: rgba(255, 255, 255, 0.5);
            color: rgba(0, 0, 0, 0.9);
            border: none;
        }
        .form-control::placeholder
        {
            color: black;
        }
        h1.title
        {
            color: whitesmoke;
        }
        h1.title small
        {
            color: darkgray;
        }
        hr
        {
            display: block;
            border: none;
            height: 2px;
            background: #C9C9C9;
        }
        hr.center
        {
            width: 90%;
            background: -webkit-gradient(radial, 50% 50%, 0, 50% 50%, 800, from(#C9C9C9), to(rgba(0, 0, 0, 0)));
        }
        hr.left
        {
            width: 100%;
            background: -webkit-gradient(radial, 50% 50%, 0, 0 0, 250, from(#C9C9C9), to(rgba(0, 0, 0, 0)));
        }
        .content
        {
            width: 100%;
            height: 100%;
            display: flex;
            align-content: center;
            align-items: center;
        }
        .box
        {
            overflow: auto;
            margin: auto;
            width: 30%;
            border-radius: 20px;
            background-color: rgba(0, 0, 0, 0.8);
            box-shadow: 0 0 10px 1px black;
            color: #C9C9C9;
            padding: 10px 30px 30px 30px;
        }
        .box a
        {
            font-weight: bold;
            text-decoration: none;
            color: #C9C9C9;
            margin-right: 4%;
            padding: 5px;
            cursor: pointer;
            border-bottom: 1px solid;
        }
        .box a:hover
        {
            font-weight: bolder;
            border-bottom: 2px solid;
        }
    </style>
{% endblock %}

