{% extends 'base.html.twig' %}

{% block title %}
    Inscription
{% endblock %}

{% block body %}
    <h1 class="text-center title">Inscription | <small>Créez votre compte Alib'Album</small></h1>
    <hr class="center">
    <div class="content">
        <div class="box">
            <h2>Inscription</h2>
            <hr class="left">
            <form action="{{ path('register') }}" method="post" data-toggle="validator" role="form">
                {% if errors %}
                    <div class="alert alert-danger alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <strong>Erreur !</strong>
                        <ul>
                            {% for error in errors %}
                                <li>{{ error }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}
                <div class="form-group">
                    <label for="username">Nom d'utilisateur</label>
                    <input type="text" class="form-control" id="username" name="username" placeholder="Nom d'utilisateur" maxlength="10" required>
                    <div class="small text-muted">10 caractères max</div>
                    <div class="help-block with-errors small"></div>
                </div>
                <div class="form-group">
                    <label for="password">Mot de passe</label>
                    <div class="form-inline row">
                        <div class="form-group col-sm-6">
                            <input type="password" class="form-control" id="password" name="password" placeholder="Mot de passe" maxlength="80" required>
                            <div class="help-block with-errors small"></div>
                        </div>
                        <div class="form-group col-sm-6">
                            <input type="password" class="form-control" id="password-conf" name="password-conf" placeholder="Confirmation" required data-match="#password">
                            <div class="help-block with-errors small"></div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="email">Adresse mail</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Adresse mail" required>
                    <div class="small text-muted">Votre adresse mail est confidentielle et ne sera pas distribuée à des tiers.</div>
                    <div class="help-block with-errors small"></div>
                </div>
                <div class="form-group">
                    <div class="form-inline row">
                        <div class="form-group col-sm-6">
                            <label for="firstname">Prénom</label>
                            <input type="text" class="form-control" id="firstname" name="firstname" placeholder="Prénom" maxlength="40" required>
                            <div class="help-block with-errors small"></div>
                        </div>
                        <div class="form-group col-sm-6">
                            <label for="lastname">Nom</label>
                            <input type="text" class="form-control" id="lastname" name="lastname" placeholder="Nom" maxlength="50" required>
                            <div class="help-block with-errors small"></div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="country">Pays</label>
                    <select class="form-control" id="country" name="country" required>
                        {% for country in countries %}
                            <option value="{{ country.getCodePays() }}" {{ (country.getNomPays() == 'France') ? 'selected' }}>{{ country.getNomPays()|e }}</option>
                        {% endfor %}
                    </select>
                    <div class="help-block with-errors small"></div>
                </div>
                <div class="form-group">
                    <label for="address">Adresse</label>
                    <input type="text" class="form-control" id="address" name="address" placeholder="Adresse" maxlength="50" required>
                    <div class="help-block with-errors small"></div>
                    <div class="form-inline row">
                        <div class="form-group col-sm-3">
                            <input type="text" pattern="^[0-9]{5}$" title="Code Postal" class="form-control" id="postalcode" name="postalcode" placeholder="Code Postal" required>
                            <div class="help-block with-errors small"></div>
                        </div>
                        <div class="form-group col-sm-9">
                            <input type="text" class="form-control" id="city" name="city" placeholder="Ville" maxlength="50" required>
                            <div class="help-block with-errors small"></div>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Inscription</button>
            </form>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <style>
        form {
            width: 100%;
            margin: 0 auto;
        }
        input.form-control, select.form-control {
            min-width: 100%;
            max-width: 100%;
            background-color: rgba(255, 255, 255, 0.5);
            color: rgba(0, 0, 0, 0.9);
            border: none;
        }
        .form-control::placeholder
        {
            color: black;
        }
        h1.title
        {
            color: whitesmoke;
        }
        h1.title small
        {
            color: darkgray;
        }
        hr
        {
            display: block;
            border: none;
            height: 2px;
            background: #C9C9C9;
        }
        hr.center
        {
            width: 90%;
            background: -webkit-gradient(radial, 50% 50%, 0, 50% 50%, 800, from(#C9C9C9), to(rgba(0, 0, 0, 0)));
        }
        hr.left
        {
            width: 100%;
            background: -webkit-gradient(radial, 50% 50%, 0, 0 0, 250, from(#C9C9C9), to(rgba(0, 0, 0, 0)));
        }
        .content
        {
            width: 100%;
            height: 100%;
            display: flex;
            align-content: center;
            align-items: center;
            padding-bottom: 30px;
        }
        .box
        {
            overflow: auto;
            margin: auto;
            width: 50%;
            border-radius: 20px;
            background-color: rgba(0, 0, 0, 0.8);
            box-shadow: 0 0 10px 1px black;
            color: #C9C9C9;
            padding: 10px 30px 30px 30px;
        }
        .box a
        {
            font-weight: bold;
            text-decoration: none;
            color: #C9C9C9;
            margin-right: 4%;
            padding: 5px;
            cursor: pointer;
            border-bottom: 1px solid;
        }
        .box a:hover
        {
            font-weight: bolder;
            border-bottom: 2px solid;
        }
    </style>
{% endblock %}

