{% extends 'base.html.twig' %}

{% block title %}
    Connexion
{% endblock %}

{% block body %}
    <div class="page-header">
        <h1>Inscription | <small>Créez votre compte Alib'Album</small></h1>
    </div>
    <form action="{{ path('register') }}" method="post" data-toggle="validator" role="form">
        {% if error %}
            <div class="alert alert-danger alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong>Erreur !</strong> Une erreur est survenue...
            </div>
        {% endif %}
        <div class="form-group">
            <label for="username">Nom d'utilisateur</label>
            <input type="text" class="form-control" id="username" name="username" placeholder="Nom d'utilisateur" required>
            <div class="help-block with-errors small"></div>
        </div>
        <div class="form-group">
            <label for="password">Mot de passe</label>
            <div class="form-inline row">
                <div class="form-group col-sm-6">
                    <input type="password" class="form-control" id="password" name="password" placeholder="Mot de passe" required>
                    <div class="help-block with-errors small"></div>
                </div>
                <div class="form-group col-sm-6">
                    <input type="password" class="form-control" id="password-conf" name="password-conf" placeholder="Confirmation" required data-match="#password">
                    <div class="help-block with-errors small"></div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="email">Adresse mail</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="Adresse mail" required>
            <div class="small text-muted">Votre adresse mail est confidentielle et ne sera pas distribuée à des tiers.</div>
            <div class="help-block with-errors small"></div>
        </div>
        <div class="form-group">
            <div class="form-inline row">
                <div class="form-group col-sm-6">
                    <label for="firstname">Prénom</label>
                    <input type="text" class="form-control" id="firstname" name="firstname" placeholder="Prénom" required>
                    <div class="help-block with-errors small"></div>
                </div>
                <div class="form-group col-sm-6">
                    <label for="lastname">Nom</label>
                    <input type="text" class="form-control" id="lastname" name="lastname" placeholder="Nom" required>
                    <div class="help-block with-errors small"></div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="address">Adresse</label>
            <input type="text" class="form-control" id="address" name="address" placeholder="Adresse" required>
            <div class="help-block with-errors small"></div>
            <div class="form-inline row">
                <div class="form-group col-sm-3">
                    <input type="number" pattern="^[0-9]{5}$" class="form-control" id="postalcode" name="postalcode" placeholder="Code Postal" required>
                    <div class="help-block with-errors small"></div>
                </div>
                <div class="form-group col-sm-9">
                    <input type="text" class="form-control" id="city" name="city" placeholder="Ville" required>
                    <div class="help-block with-errors small"></div>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Inscription</button>
    </form>
{% endblock %}

{% block stylesheets %}
    <style>
        form {
            max-width: 60%;
            margin: 0 auto;
        }
        input.form-control {
            min-width: 100%;
            max-width: 100%;
        }
    </style>
{% endblock %}

