{% extends 'base.html.twig' %}

{% block title %}
{{ title }}
{% endblock %}

{% block body %}
    <h1>{{ title }}</h1>
    {% if error != null %}
        <p class="error">{{ error }}</p>
    {% endif %}
    <form action="{{ action }}" method="{{ method }}">
        {% for field in fields %}
            <input
                    name="{{ field.name }}"
                    type="{{ field.type }}"
                    placeholder="{{ field.placeholder }}"
                    {% if field.required|default(false) %} required {% endif %}
            >
        {% endfor %}
        <input type="submit" value="{{ submit }}">
    </form>
{% endblock %}

{% block stylesheets %}
<style>
    html {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
    }
    body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        background: #F5F5F5;
        font: 18px/1.5 sans-serif;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
    h1 {
        text-align: center;
        line-height: 1.2;
        font-size: 36px;
        margin:10px auto;
    }
    .error {
        display: block;
        margin: 10px auto;
        padding: 10px;
        min-width: 20%;
        border-radius: 8px;
        color: #D8000C;
        background: #FFD2D2;
        text-align: center;
    }
    input {
        display: block;
        width: 20%;
        margin: 10px auto;
        padding: 10px;
        border: darkgray solid 1px;
        border-radius: 8px;
        text-align: center;
    }
    input:focus {
        border-color: #0088CC;
    }
    input[type="submit"] {
        margin-top: 20px;
        user-select: none;
        -ms-user-select: none;
        -moz-user-select: none;
        -webkit-user-select: none;
        outline: none 0;
    }
    input::-moz-focus-inner {
        border: 0;
    }
</style>
{% endblock %}

